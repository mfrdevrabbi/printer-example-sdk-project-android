apply plugin: 'com.android.application'

android {
    compileSdkVersion 27
    buildToolsVersion '28.0.3'
    defaultConfig {
        applicationId "com.printer.example"
        minSdkVersion 19
        targetSdkVersion 27
        versionCode 1
        versionName "2.0.50"//50:增加IP搜索  49:增加串口内容
        // 未发-2018.09.182.0.25[cpcl],  2.0.26 esc增加行间距 2.0.29  TSC增加加粗
        testInstrumentationRunner "android.support.test.runner.AndroidJUnitRunner"
    }
    buildTypes {
        release {
            minifyEnabled false // 是否混淆
//            shrinkResources true // 是否去除无效的资源文件
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
            //采用动态替换字符串的方式生成不同的release.apk
            //采用动态替换字符串的方式生成不同的release.apk
            android.applicationVariants.all { variant ->
                variant.outputs.all {
                    def timeStamp = new Date().format('yyyy.MM.dd_HHmm')
                    outputFileName = "PrinterExample_standard_v${defaultConfig.versionName}_" + timeStamp + ".apk"
                }
            }
//            applicationVariants.all { variant ->
//                variant.outputs.each { output ->
//                    def outputFile = output.outputFile
//                    if (outputFile != null && outputFile.name.endsWith('release.apk')) {
//                        def timeStamp = new Date().format('yyyy.MM.dd_HHmm');
//                        def fileName = "PrinterExample_standard_v${defaultConfig.versionName}" + "_" + timeStamp + ".apk";
//                        output.outputFile = file("${outputFile.parent}/${fileName}")
//                    }
//                }
//            }
        }
    }


    sourceSets {
        main {
//            manifest.srcFile 'AndroidManifest.xml'
            jniLibs.srcDirs = ['libs']
            //    java.srcDirs = ['src']
//            resources.srcDirs = ['src']
            assets.srcDirs = ['assets', 'src/main/assets', 'src/main/assets/']
        }


    }


}

dependencies {
    compile fileTree(include: ['*.jar'], dir: 'libs')
    compile 'com.android.support.constraint:constraint-layout:1.1.3'
    androidTestCompile('com.android.support.test.espresso:espresso-core:2.2.2', {
        exclude group: 'com.android.support', module: 'support-annotations'
    })
    compile 'com.android.support:appcompat-v7:27.1.1'
    testCompile 'junit:junit:4.12'
    compile files('libs/printer_library.jar')
}
