apply plugin: 'com.android.application'

android {
    compileSdkVersion 28
    buildToolsVersion '28.0.2'
    defaultConfig {
        applicationId "com.printer.example"
        minSdkVersion 19
        targetSdkVersion 28
        versionCode 1
        versionName "2.0.62"
        //62:图片宽度改成可定义
        //61:增加固件版本升级功能
        //60:PM56-C模组，增加缺纸学习指令，恢复出厂设置
        //59:PM56-C模组，增加支持查询当前光耦AD值功能
        //58:RP326 U口、COM口状态反馈
        //57:二供芯片读取不到IN包问题
        //56:增加RPP300状态返回
        //55:Hneywell增加设置黑标移动，X，Y移动API
        //54:RP58temp数据打印
        //52：增加U口反馈 53：U口概率性连接上无法打印
        //51:NBC20201013510H031状态适配 50:增加IP搜索  49:增加串口内容
        testInstrumentationRunner "android.support.test.runner.AndroidJUnitRunner"
    }
    buildTypes {
        release {
            minifyEnabled true // 是否混淆
//            shrinkResources true // 是否去除无效的资源文件
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-rules.pro'
            //采用动态替换字符串的方式生成不同的release.apk
            android.applicationVariants.all { variant ->
                variant.outputs.all {
                    def timeStamp = new Date().format('yyyy.MM.dd_HHmm');
                    outputFileName = "PrinterExample_standard_v${defaultConfig.versionName}_${timeStamp}.apk"
                }
            }
        }
    }


    sourceSets {
        main {
            jniLibs.srcDirs = ['libs']
            assets.srcDirs = ['assets', 'src/main/assets', 'src/main/assets/']
        }
    }

}

dependencies {
    implementation fileTree(include: ['*.jar'], dir: 'libs')
    implementation 'com.android.support.constraint:constraint-layout:1.1.3'
    androidTestImplementation('com.android.support.test.espresso:espresso-core:2.2.2', {
        exclude group: 'com.android.support', module: 'support-annotations'
    })
    implementation 'com.android.support:appcompat-v7:+'
    testImplementation 'junit:junit:4.12'
    implementation files('libs/printer_library.jar')
}
